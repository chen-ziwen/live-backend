{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": "./",
    "sourceMap": true,
    "alwaysStrict": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@app/*": [
        "src/app"
      ],
      "@stream/*": [
        "src/stream",
      ],
      "@utils/*": [
        "src/utils"
      ]
    },
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "inclue": [
    "src/**/*.ts",
    "app.ts",
    "index.d.ts",
  ],
}